<!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Boxes
        <small>Edit</small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="/admin/dashboard"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="/admin/boxes">Boxes</a></li>
        <li class="active">Edit</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      

      <div class="row">
        <!-- left column -->
        <div class="col-md-8">
          <!-- general form elements -->
          <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">Edit box information</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->

            <%- partial('../../../partials/flash') %>


            <form role="form" method="post" action="/admin/boxes/editBox">
              <input type="hidden" name="_csrf" value="<%= _csrf %>" />
              <input type="hidden" name="id" value="<%= box.id %>" />

              <div class="box-body">
                <div class="form-group">
                  <label for="exampleInputEmail1">Name</label>
                  <input type="text" class="form-control" id="Name" placeholder="Enter box name" name="name" required="" value="<%=box.name%>">
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">Price</label>
                  <input type="text" class="form-control" id="Price" placeholder="Enter box price" name="price" required="" value="<%=box.price%>">
                </div>

                <div class="form-group">
                  <label for="exampleInputEmail1">Status</label>
                  <select  name="status" class="form-control" style="width: 200px;">
                    <option <%= (box.status) ? 'selected' : '' %> value="1">Active</option>
                    <option <%= (!box.status) ? 'selected' : '' %> value="0">Inactive</option>
                  </select>
                </div>
               
                
              </div>
              <!-- /.box-body -->

              <div class="box-footer">
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>
            </form>
          </div>
          <!-- /.box -->


        </div>
      </div>


    </section>
    <!-- /.content -->